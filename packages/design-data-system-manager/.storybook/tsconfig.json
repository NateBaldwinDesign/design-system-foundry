{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "types": ["node"],
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "*.ts",
    "*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
} 